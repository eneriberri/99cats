<form action="<%= cat_rental_requests_url %>" method="post">
	<label for="select_cat">Select a cat:</label>
	<select name="cat_rental_request[cat_id]" id="select_cat">
		<option></option>
		<% @cats.each do |cat| %>
			<option value="<%= cat.id %>">
				<%= cat.name %>
			</option>
		<% end %>
	</select>
	<br />

	<label for="start_date">Start date:</label>
	<input type="date" name="cat_rental_request[start_date]" id="start_date">
	<br />

	<label for="end_date">End date:</label>
	<input type="date" name="cat_rental_request[end_date]" id="end_date">
	<br />

	<input type="submit" value="Request cat rental">
</form>